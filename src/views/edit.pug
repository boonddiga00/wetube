extends base

block content
	h4 Update #{video.title}
	form(method="POST")
		input(name="title", palceholder="New Title", value=video.title, type="text", required)
		input(name="description", type="text", placeholder="Description", value=video.description required, minlength=20)
		input(name="hashtags", type="text", placeholder="Hashtags seperated by comma", value=video.hashtags.join(), required)
		input(type="submit", value="Save")

