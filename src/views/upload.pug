extends base

block content
	div
		video#preview
		button#startBtn Start Recording
	if errorMessage
		span=errorMessage
	form(method="POST" enctype="multipart/form-data")
		label(for="video") Upload Video
		input(id="video", type="file", accept="video/*", required, name="video")
		input(name="title", type="text", placeholder="New title here!", required, maxlength=80)
		input(name="description", type="text", placeholder="Description", required, minlength=20)
		input(name="hashtags", type="text", placeholder="Hashtags seperated by comma", required)
		input(type="submit", value="Upload")
block scripts
	script(src="/static/js/recorder.js")
