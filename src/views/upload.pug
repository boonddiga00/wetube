extends base

block content
	if errorMessage
		span=errorMessage
	form(method="POST")
		input(name="title", type="text", placeholder="New title here!", required, maxlength=80)
		input(name="description", type="text", placeholder="Description", required, minlength=20)
		input(name="hashtags", type="text", placeholder="Hashtags seperated by comma", required)
		input(type="submit", value="Upload")